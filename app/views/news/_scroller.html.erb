<h1>News</h1>

	<% @news.each do |news| %>
		<div class='news-article'>
			<h2> <%= news.title %> </h2>
			<p> <%= news.body %> </p>

			<% if current_user.try(:admin?) %>
				<%= link_to 'Show', news %>
				<%= link_to 'Edit', edit_news_path(news) %>
				<%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>
	<% end %>

<br>

<h1>Recent News</h1>

<% @allNews.each do |news| %>
	<div class='col-md-12'>

		<div>
			<% if current_user.try(:admin?) %>
				<%= link_to 'New', new_news_path %>
			<% end %>
		</div>

		<div>
			<% if current_user.try(:admin?) %>
				<%= link_to 'Edit', edit_news_path(news) %>
				<%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>

		<h2> <%= news.title %> </h2>
		<p> <%= truncate(news.body, length: 100, separator: '.') %> </p>

		<%= link_to 'Read More ..', news_path(news, page: params[:page]), class: 'read-more' %>

	</div>
<% end %>

<%= will_paginate @allNews %>

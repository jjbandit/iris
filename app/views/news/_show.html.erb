<h1> <%= @news.title %> </h1>

<% if current_user.try(:admin?) %>
	<div class='col-md-12'>
		<%= link_to 'Edit', edit_news_path(@news), class: 'btn btn-default' %>
		<%= link_to 'Destroy', @news, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
	</div>
<% end %>

<div class='col-xs-12'>
	<%= image_tag @news.image.url(:large), class: 'full-width'%>
</div>

<p>
<%= @news.body %>
</p>

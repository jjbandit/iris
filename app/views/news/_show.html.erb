<h1> <%= @news.title %> </h1>


<% if current_user.try(:admin?) %>
	<div class='col-md-12'>
		<%= link_to 'Edit', edit_news_path(@news) %>
		<%= link_to 'Destroy', @news, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<% end %>

<div>
	<%= image_tag @news.image.url(:large), class: 'full-width'%>
</div>

<p>
<%= @news.body %>
</p>

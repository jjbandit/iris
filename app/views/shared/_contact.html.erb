<div class='col-md-6'>
	<%= form_tag('/contact', action: 'create', id: 'contact-form', remote: true, method: 'post') do %>
			<h3>Send us a Message</h3>
			<div class='form-group'>
				<%= label_tag :email %>
				<%= text_field_tag :email, nil, class: 'form-control' %>
			</div>


			<div class='form-group'>
				<%= label_tag :name %>
				<%= text_field_tag :name, nil, class: 'form-control' %>
			</div>

			<div class='form-group'>
				<%= label_tag :message %>
				<%= text_area_tag :message, nil, class: 'form-control' %>
			</div>

			<div class='form-group'>
				<%= submit_tag 'Send Message', class: 'btn btn-default' %>
			</div>


	<% end %>
</div>
